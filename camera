import matplotlib.pyplot as plt
import pytesseract
import cv2
from pydrive.auth import GoogleAuth
from pydrive.drive import GoogleDrive
import os

def open_img(img_path):
    carplate_img = cv2.imread(img_path)
    carplate_img = cv2.cvtColor(carplate_img, cv2.COLOR_BGR2RGB)
    plt.axis('off')
    plt.imshow(carplate_img)
    # plt.show()
    return carplate_img


def carplate_extract(image, carplate_haar_cascade):
    carplate_rects = carplate_haar_cascade.detectMultiScale(image, scaleFactor=1.1, minNeighbors=5)
    for x, y, w, h in carplate_rects:
        carplate_img = image[y+1:y+h-1, x+1:x+w-1]
    return carplate_img


def enlarge_img(image, scale_percent):
    width = int(image.shape[1] * scale_percent / 100)
    height = int(image.shape[0] * scale_percent / 100)
    dim = (width, height)
    plt.axis('off')
    resized_image = cv2.resize(image, dim, interpolation = cv2.INTER_AREA)
    return resized_image


def main():

    carplate_img_rgb = open_img(img_path='')
    carplate_haar_cascade = cv2.CascadeClassifier('/Users/Konstantin/Desktop/хакатон/ии/haarcascade.xml')
    #numer2 = pytesseract.image_to_string(carplate_img_rgb,config='--psm 6 --oem 3 -c tessedit_char_whitelist=B87KE95')
    #print(numer2)
    carplate_extract_img = carplate_extract(carplate_img_rgb, carplate_haar_cascade)
    carplate_extract_img = enlarge_img(carplate_extract_img, 150)
    plt.imshow(carplate_extract_img)
    # plt.show()
    carplate_extract_img_gray = cv2.cvtColor(carplate_extract_img, cv2.COLOR_RGB2GRAY)
    plt.axis('off')
    plt.imshow(carplate_extract_img_gray, cmap='gray')
    plt.show()
    numer='H541TC196' 
